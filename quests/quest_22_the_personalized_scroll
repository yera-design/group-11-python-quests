#!/usr/bin/python3
#function to print a personalized greeting
def personalized_greeting(name, quest):
print("Hello " + name + "! Good luck on your quest to " + quest + "!")

#asking the user for their name and quest
user_name = input("What is your name? ")

user_quest = input("What is your quest? ")

#calling the function with the user's answers
personalized_greeting(user_name, user_quest)
